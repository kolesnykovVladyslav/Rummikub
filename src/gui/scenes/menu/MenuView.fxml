         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#handleRulesButton" prefHeight="60.0" prefWidth="250.0" stylesheets="@/resources/Button.css" text="Rules">
         <font>
            <Font size="22.0" />
         </font>
      </Button>
      <Button mnemonicParsing="false" onAction="#handleSettingsButton" prefHeight="60.0" prefWidth="250.0" stylesheets="@/resources/Button.css" text="Settings">
