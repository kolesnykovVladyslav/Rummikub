            </AnchorPane>
            <AnchorPane prefHeight="50.0" prefWidth="359.0">
               <children>
                  <Button fx:id="nextButton" contentDisplay="RIGHT" layoutX="209.0" layoutY="1.0" mnemonicParsing="false" onAction="#handleNextButton" prefHeight="48.0" prefWidth="150.0" stylesheets="/resources/Button.css" text="Next Page" />
